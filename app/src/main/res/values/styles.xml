<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="fontFamily">@font/comfortaa</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="defaultPreviewImageCollection">
        <item name="baseRowHeight">@dimen/baseRowHeight</item>
        <item name="imageMargin">@dimen/imageMargin</item>
        <item name="maxImagePerRow">@integer/maxImagePerRow</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="showExternalBorderMargins">@bool/showExternalBorderMargins</item>
        <item name="pinchToZoom">@bool/pinchToZoom</item>
        <item name="imageScaleType">centerCrop</item>
    </style>
</resources>
